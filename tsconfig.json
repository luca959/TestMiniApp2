{
    "compilerOptions": {
      "target": "ES2020",                         
      "module": "CommonJS",                       
      "moduleResolution": "Node",                 
      "outDir": "dist",                           
      "rootDir": ".",                             
      "strict": true,                             
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true,   
      "resolveJsonModule": true,                  
      "allowSyntheticDefaultImports": true,       
      "experimentalDecorators": true              
    },
    "include": ["bot/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  